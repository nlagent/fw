# EditorConfig — NL-Agent Framework
# Garante consistência de formatação entre todos os editores e IDEs.
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,ts,json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{toml,cfg,ini}]
indent_size = 4

[Makefile]
indent_style = tab

[*.{html,css,xml}]
indent_size = 2
