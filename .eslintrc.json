{
    "root": true,
    "env": {
        "es2020": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "no-var": "off",
        "prefer-const": "off",
        "no-undef": "off"
    },
    "overrides": [
        {
            "files": [
                "src/apps_script/**/*.js"
            ],
            "env": {
                "browser": false,
                "node": false
            },
            "globals": {
                "Logger": "readonly",
                "Utilities": "readonly",
                "SpreadsheetApp": "readonly",
                "PropertiesService": "readonly",
                "UrlFetchApp": "readonly",
                "ContentService": "readonly",
                "HtmlService": "readonly",
                "DriveApp": "readonly",
                "CacheService": "readonly",
                "LockService": "readonly",
                "ScriptApp": "readonly",
                "Session": "readonly",
                "console": "readonly"
            },
            "rules": {
                "no-var": "off",
                "prefer-const": "off"
            }
        }
    ]
}